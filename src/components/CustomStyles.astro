---
import '@fontsource-variable/open-sans';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'open-sans', Arial, sans-serif;
    --aw-font-serif: 'open-sans', Arial, sans-serif;
    --aw-font-heading: 'open-sans', Arial, sans-serif;

    --aw-color-primary: rgb(30 55 101);
    --aw-color-secondary: rgb(0 120 148);
    --aw-color-accent-purple: rgb(109 26 122);
    --aw-color-accent-red: rgb(220 70 51);
    --aw-color-accent-blue: rgb(111 199 234);
    --aw-color-accent-turquoise: rgb(0 161 137);
    --aw-color-accent-magenta: rgb(171 19 104);
    --aw-color-accent-cyprus: rgb(13 83 77);
    --aw-color-accent-yellow: rgb(241 197 0);
    --aw-color-accent-lime: rgb(141 191 46);
    --aw-color-cool-gray: rgb(208 209 201);

    --aw-color-text-heading: rgb(30 55 101);
    --aw-color-text-default: rgb(0 0 0);
    --aw-color-text-muted: rgb(0 0 0 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(0 0 0);

    /* ::selection {
      background-color: rgb(30 55 101);
    } */
  }

  .dark {
    --aw-font-sans: 'open-sans', Arial, sans-serif;
    --aw-font-serif: 'open-sans', Arial, sans-serif;
    --aw-font-heading: 'open-sans', Arial, sans-serif;

    --aw-color-primary: rgb(30 55 101);
    --aw-color-secondary: rgb(0 120 148);
    --aw-color-accent-purple: rgb(109 26 122);
    --aw-color-accent-red: rgb(220 70 51);
    --aw-color-accent-blue: rgb(111 199 234);
    --aw-color-accent-turquoise: rgb(0 161 137);
    --aw-color-accent-magenta: rgb(171 19 104);
    --aw-color-accent-cyprus: rgb(13 83 77);
    --aw-color-accent-yellow: rgb(241 197 0);
    --aw-color-accent-lime: rgb(141 191 46);
    --aw-color-cool-gray: rgb(208 209 201);

    --aw-color-text-heading: rgb(0 161 137);
    --aw-color-text-default: rgb(255 255 255);
    --aw-color-text-muted: rgb(0 0 0 / 33%);
    --aw-color-bg-page: rgb(30 55 101);

    /* ::selection {
      background-color: black;
      color: rgb(0 0 0);
    } */
  }
</style>

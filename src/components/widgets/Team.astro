---
import type { Content as Props } from '~/types';
import Headline from '../ui/Headline.astro';
import WidgetWrapper from '../ui/WidgetWrapper.astro';
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';
import ItemGrid from '../ui/ItemGrid.astro';
import TeamGrid from '../ui/TeamGrid.astro';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  content = await Astro.slots.render('content'),
  callToAction,
  items = [],
  columns,
  image = await Astro.slots.render('image'),
  isReversed = false,
  isAfterContent = false,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---
<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`max-w-7xl mx-auto ${isAfterContent ? 'pt-0 md:pt-0 lg:pt-0' : ''} ${classes?.container ?? ''}`}
  bg={bg}
>
    <Headline
      title={title}
      subtitle={subtitle}
      tagline={tagline}
      classes={{
        container: 'max-w-xl sm:mx-auto lg:max-w-2xl',
        title: 'text-4xl md:text-5xl font-bold tracking-tighter mb-4 font-heading',
        subtitle: 'max-w-3xl mx-auto sm:text-center text-xl text-muted dark:text-slate-400',
      }}
    />
    <TeamGrid
        items={[
            {
            title: 'John Doe',
            description: 'Lead Developer',
            image: '/path/to/profile-picture.jpg',
            links: [
                { icon: 'icon-facebook', href: 'https://facebook.com/johndoe' },
                { icon: 'icon-twitter', href: 'https://twitter.com/johndoe' },
                { icon: 'icon-linkedin', href: 'https://linkedin.com/in/johndoe' },
            ],
            classes: {
                panel: 'custom-panel-class',
                title: 'custom-title-class',
                description: 'custom-description-class',
                image: 'custom-image-class',
                links: 'custom-links-class'
            },
            },
            // More items...
        ]}
        columns={3}
        classes={{
            container: 'custom-container-class',
            panel: 'custom-panel-class',
            title: 'custom-title-class',
            description: 'custom-description-class',
            image: 'custom-image-class',
            action: 'custom-action-class',
            links: 'custom-links-class'
        }}
    />
</WidgetWrapper>